<%
  description ||= nil
%>

<div class: "gem-c-success-alert govuk-notification-banner govuk-notification-banner--success" role: "alert", tabindex: "-1", aria-labelledby: "govuk-notification-banner-title" data-module="initial-focus">
  <div class="govuk-notification-banner__header">
    <h2 class="govuk-notification-banner__title" id="govuk-notification-banner-title">
      Success
    </h2>
  </div>
  <div class="govuk-notification-banner__content">
    <% if description.present? %>
      <%= tag.h3 message, class: "gem-c-success-summary__title govuk-notification-banner__heading" %>
      <%= tag.div description, class: "gem-c-success-summary__body" %>
    <% else %>
      <%= tag.p message, class: "gem-c-success-alert__message" %>
    <% end %>
  </div>
</div>
